<%= form_for(@account) do |f| %>
    <% if @account.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%if @account_type == getAccountCardType.to_s(10)%>
                <%= pluralize(@account.errors.count, t(:error)) %> <%=t(:message_account_card_errors_header)%>
            <%elsif @account_type == getAccountCashType.to_s(10)%>
                <%= pluralize(@account.errors.count, t(:error)) %> <%=t(:message_account_cash_errors_header)%>
            <%end%>
          </h2>
          <ul>
            <% @account.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.hidden_field :account_type%>
    <div><%= f.label t(:name) %><br />
      <%= f.text_field :name, :class => "input-field"%>
    </div>
    <div><%= f.label t(:description) %><br />
      <%= f.text_area :description, :size => "60x6", :class => "text-area"%>
    </div>
    <div><%= f.label t(:amount) %><br />
      <%= f.text_field :amount, :class => "input-field amount-input-field input-field-disabled", :readOnly => true%>
    </div>
    <div class="actions form-buttons">
      <%= f.submit t(:button_save)%>
    </div>
<% end %>
