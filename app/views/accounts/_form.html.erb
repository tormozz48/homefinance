<%= form_for(@account) do |f| %>
    <% if @account.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%if @account.account_type == getAccountCardType.to_s(10)%>
                <%= pluralize(@account.errors.count, t('common.error')) %> <%=t('message.error.account.header.card')%>
            <%elsif @account.account_type == getAccountCashType.to_s(10)%>
                <%= pluralize(@account.errors.count, t('common.error')) %> <%=t('message.error.account.header.cash')%>
            <%end%>
          </h2>
          <ul>
            <% @account.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.hidden_field :account_type%>
    <div><%= f.label t('field.common.name') %><br />
      <%= f.text_field :name, :class => "input-field"%>
    </div>
    <div><%= f.label t('field.common.description') %><br />
      <%= f.text_area :description, :size => "60x6", :class => "text-area"%>
    </div>
    <div><%= f.label t('field.account.amount') %><br />
      <%= f.text_field :amount, :class => "input-field amount-input-field input-field-disabled", :readOnly => true%>
    </div>
    <div class="actions form-buttons">
      <%= f.submit "", :class=>"save-button", :title=>t('button.save')%>
    </div>
<% end %>
