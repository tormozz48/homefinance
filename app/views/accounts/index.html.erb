<div class="table-wrapper">
  <div class="table-wrapper-header">
    <span>
      <%=getIndexTitle(@account_type)%>
    </span>
  </div>
  <div class="table-wrapper-body">
    <%=getAddButtonLink(@account_type)%>
    <table class="data-table">
      <thead>
      <tr>
        <th><%=t(:amount)%></th>
        <th><%=t(:name)%></th>
        <th><%=t(:description)%></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td class="td-account-amount"><strong><%=account.amount%></strong></td>
            <td class="td-account-name"><strong><%=account.name%></strong></td>
            <td class="td-account-description"><%=account.description%></td>
            <td class="td-edit">
              <%= link_to t(:button_edit), edit_account_path(account, :type => @account_type),:class => "link" %>
            </td>
            <td class="td-delete">
              <%= link_to t(:button_delete), account,
                          confirm: t(:message_record_delete_confirm), method: :delete, :class => "link link-delete" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>