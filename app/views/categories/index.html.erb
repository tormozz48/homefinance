<!--sorting form-->
<div class="row-fluid">
  <div class="span12">
    <%= form_tag(sort_categories_path, :id =>"categorySortingFormId", :method=>:post, :remote => true,
                 :class => "form-inline well") do -%>
           <legend><%=t('list.categories')%></legend>
           <%= link_to new_category_path, :class => "btn btn-success" do%>
                <i class="icon-plus icon-white"></i> <%=t('button.add')%>
           <%end%> 
           <%= label_tag "field", t('sorting_by'), :class => "control-label marginleft10px hidden-phone"%>
           <%= select_tag "field", getCategoriesSortingOptionList.html_safe , :id => "field", :class => "span2 hidden-phone"%>
           <%= select_tag "direction", getSortingDirectionOptionList.html_safe , :id => "direction", :class => "span3 hidden-phone"%>
    <% end -%>
  </div>
</div>

<!--data table-->
<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
          <tr>
            <th>&nbsp;</th>
            <th><%=t('field.category.color')%></th>
            <th><%=t('field.common.name')%></th>
            <th><%=t('field.common.description')%></th>
          </tr>
      </thead>
      <tbody id="dataWrapperID"></tbody>
    </table>
  </div>
</div>


<script type="text/javascript">
    jQuery(document).ready(function(){
       categoriesJS.init();
    });
</script>








