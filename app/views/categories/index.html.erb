<%=render '/notifications'%>

<!--sorting form-->
<div class="row-fluid">
  <div class="span12">
    <%= form_tag(sort_categories_path, :id =>"categorySortingFormId", :method=>:post, :remote => true,
                 :class => "form-inline well") do -%>
           <legend><%=t('list.categories')%></legend>
           <%= link_to new_category_path, :class => "btn btn-success", :title => t('button.add') do%>
                <i class="icon-plus icon-white"></i> <%=t('button.add')%>
           <%end%> 
           <%= label_tag "field", t('sorting_by'), :class => "control-label marginleft10px hidden-phone"%>
           <%= select_tag "field", getCategoriesSortingOptionList(@field).html_safe , :id => "field",
                          :class => "input-medium hidden-phone", :title => t('tooltip.input.sorting_field')%>
           <%= select_tag "direction", getSortingDirectionOptionList(@direction).html_safe , :id => "direction",
                          :class => "input-medium hidden-phone", :title => t('tooltip.input.sorting_direction')%>
    <% end -%>
  </div>
</div>

<!--data table-->
<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
          <tr class="well">
            <th width="10%">&nbsp;</th>
            <th width="5%"><%=t('field.category.color')%></th>
            <th width="25%"><%=t('field.common.name')%></th>
            <th width="60%"><%=t('field.common.description')%></th>
          </tr>
      </thead>
      <tbody id="dataWrapperID"></tbody>
    </table>
  </div>
</div>


<script type="text/javascript">
    jQuery(document).ready(function(){
       categoriesJS.init();
    });
</script>








