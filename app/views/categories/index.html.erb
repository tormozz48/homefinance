<div class="table-wrapper">
  <div class="table-wrapper-header">
    <span>
      <%=t('list.categories')%>
    </span>
  </div>
  <div class="table-wrapper-body">
    <%= link_to t('add.category'), new_category_path, :class => "link" %>
    <%= form_tag(sort_categories_path, :id =>"categorySortingFormId", :method=>:post, :remote => true, :class => "category-sorting-form") do -%>
        <div class="category-sorting-form">
           <%= label_tag "field", t('sorting_by'), :class => "statistic-date-label", :style => "font-weight: bold;"%>
           <%= select_tag "field", getCategoriesSortingOptionList.html_safe , :id => "field_id"%>
           <%= select_tag "direction", getSortingDirectionOptionList.html_safe , :id => "direction_id"%>
        </div>
    <% end -%>
    <table class="data-table" >
      <thead>
          <tr>
            <th class="header-category-color"><%=t('field.category.color')%></th>
            <th class="header-category-name"><%=t('field.common.name')%></th>
            <th class="header-category-description"><%=t('field.common.description')%></th>
            <th></th>
            <th></th>
          </tr>
      </thead>
    </table>
    <div class="data-wrapper">
      <!--categories will be rendered here-->
    </div>
  </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function(){
        categoriesListInit();
    });
</script>








