<p id="notice"><%= notice %></p>
<div class="category-details">
  <div class="form-header">
    <span>
      <%=t(:form_show_category_title)%>
    </span>
  </div>
  <div class="form-body">
      <div>
        <span><%=t(:name)%></span>
        <span><strong><%=@category.name%></strong></span>
      </div>
      <div>
        <span><%=t(:description)%></span>
        <span><strong><%=@category.description%></strong></span>
      </div>
      <div>
        <span><%=t(:color)%></span>
        <div class="color-div" style="background-color: <%=getCategoryColor(@category)%>;">&nbsp;</div>
      </div>
      <div class="link-wrapper">
        <%= link_to t(:button_back), categories_path, :class => "link" %>
        <%= link_to t(:button_edit), edit_category_path(@category), :class => "link" %>
      </div>
   </div>
</div>
