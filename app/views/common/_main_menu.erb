<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span style="color: #333;"><%=t('application.menu')%></span>
      </a>
      <%= link_to t('application.title'), root_path, :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <% if user_signed_in? %>
              <li id="menuTransactionID">
                <%=link_to t('menu.transaction.title'), transactions_path%>
              </li>
              <li class="dropdown" id="menuStatisticID">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%=t('menu.statistic.title')%>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('menu.statistic.date'), statistic_date_statistics_path %></li>
                  <li><%= link_to t('menu.statistic.category'), statistic_category_statistics_path %></li>
                </ul>
              </li>
              <li id="menuAccountsID">
                <%= link_to t('menu.accounts'), accounts_path(:type => Account::ACCOUNT_CARD_TYPE)%>
              </li>
              <li id="menuCashesID">
                <%= link_to t('menu.cashes'), accounts_path(:type => Account::ACCOUNT_CASH_TYPE) %>
              </li>
              <li id="menuCategoriesID">
                <%= link_to t('menu.categories'), categories_path %>
              </li>

              <li>
                <ul class="nav pull-right hidden-desktop">
                    <%= render 'common/user_menu'%>
                </ul>
              </li>
          <%else%>
              <li id="menu_about">
                <%= link_to t('menu.top.about'), about_path%>
              </li>
              <li id="menu_contacts">
                <%= link_to t('menu.top.contacts'), contacts_path%>
              </li>
          <%end%>
        </ul>
        <% if user_signed_in? %>
            <ul class="nav pull-right hidden-phone hidden-tablet">
                <%= render 'common/user_menu'%>
            </ul>
        <%end%>
      </div>
    </div>
  </div>
</div>