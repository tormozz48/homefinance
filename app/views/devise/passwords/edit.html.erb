<div class="form form-signup">
  <div class="form-header">
    <span><%=t(:change_password)%></span>
  </div>
  <div class="form-body">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-info">
          <%=t(:info_change_password)%>
        </div>
        <br/>
        <div><%= f.label :password, t(:password_new) %><br />
        <%= f.password_field :password %></div>

        <div><%= f.label :password_confirmation, t(:password_confirm) %><br />
        <%= f.password_field :password_confirmation %></div>

        <div class="form-buttons">
            <div><%= f.submit "", :class=>"save-button", :title=>t(:button_save) %></div>
        </div>
    <% end %>
    <div class="link-wrapper">
      <%= link_to t(:to_login_page), new_session_path(resource_name), :class=>"link" %>
      <%= link_to t(:sign_up), new_registration_path(resource_name), :class => "link" %>
    </div>
  </div>
</div>