<div class="form form-signup">
    <div class="form-header">
        <span><%=t('link.sign.up')%></span>
    </div>
    <div class="form-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-info">
              <%=t('info.registration')%>
            </div>
            <br>
            <div>
                <%= label_tag :email, t('field.user.email'), :class => "form-label" %><br />
                <%= f.email_field :email, :id => :email %>
            </div>
            <div>
                <%= label_tag :password, t('field.user.password'), :class => "form-label" %><br />
                <%= f.password_field :password, :id => :password %>
            </div>
            <div>
                <%= label_tag :password_confirmation, t('field.user.password_confirm'), :class => "form-label" %><br />
                <%= f.password_field :password_confirmation, :id => :password_confirmation %>
            </div>
            <div class="form-buttons"><%= f.submit "", :class=>"register-button", :title=>t('link.sign.up') %></div>
        <% end %>

        <div class="link-wrapper">
          <%= link_to t('button.back'), new_session_path(resource_name), :class=>"link" %><br />
        </div>
    </div>
    <div class="form-footer"></div>
</div>