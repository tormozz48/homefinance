<div class="form form-signup">
    <div class="form-header">
        <span><%=t(:sign_up)%></span>
    </div>
    <div class="form-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-info">
              <%=t(:info_registration)%>
            </div>
            <br>
            <div><%= f.label t(:email) %><br />
                <%= f.email_field :email %>
            </div>
            <div><%= f.label t(:password) %><br />
                <%= f.password_field :password %>
            </div>
            <div><%= f.label t(:password_confirm) %><br />
                <%= f.password_field :password_confirmation %>
            </div>
            <div class="form-buttons"><%= f.submit "", :class=>"register-button", :title=>t(:sign_up) %></div>
        <% end %>

        <div class="link-wrapper">
          <%= link_to t(:button_back), new_session_path(resource_name), :class=>"link" %><br />
        </div>
    </div>
    <div class="form-footer"></div>
</div>