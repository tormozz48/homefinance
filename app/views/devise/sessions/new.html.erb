<div class="form form-login">
    <div class="form-header">
        <span>
          <%=t(:form_login_title)%>
        </span>
    </div>
    <div class="form-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div><%= f.label t(:email) %><br />
                <%= f.email_field :email, :class => "login-form-input-field"%>
            </div>
            <div><%= f.label t(:password) %><br />
                <%= f.password_field :password, :class => "login-form-input-field" %>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="remember-me">
                <%= f.check_box :remember_me %> <%= f.label t(:remember_me) %>
            </div>
            <% end -%>
            <div class="form-buttons"><%= f.submit "", :class=>"login-button", :title=>t(:sign_in)%></div>
        <% end %>
      <script src="http://ulogin.ru/js/ulogin.js"></script>
        <div id="uLogin" x-ulogin-params="display=panel;fields=first_name,last_name,email;providers=vkontakte,odnoklassniki,google,yandex,facebook,twitter;hidden=;redirect_uri=http://homefinance.herokuapp.com/sign_with_social"></div>
        <div style="height: 10px;">&nbsp;</div>
        <%= link_to t(:sign_up), new_registration_path(resource_name), :class => "link" %>
        <%= link_to t(:forgot_password), new_password_path(resource_name), :class=>"link" %>
    </div>
</div>