<div class="form form-signup">
  <div class="form-header">
    <span><%=t('form.title.edit.user.profile')%></span>
  </div>
  <div class="form-body">
    <%= form_for(@user, :url => update_user_profile_path(@user)) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, t('common.error')) %> <%=t('message.error.user.header')%></h2>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div>
          <%= label_tag :email, t('field.user.email'), :class => "form-label" %><br />
          <%= f.email_field :email, :id => :email %>
        </div>
        <div>
          <%= label_tag :first_name, t('field.user.first_name'), :class => "form-label" %><br />
          <%= f.text_field :first_name, :id => :first_name %>
        </div>
        <div>
          <%= label_tag :last_name, t('field.user.last_name'), :class => "form-label" %><br />
          <%= f.text_field :last_name, :id => :last_name %>
        </div>
        <div class="form-buttons"><%= f.submit "", :class=>"save-button", :title=>t('button.save') %></div>
    <% end %>

    <div class="link-wrapper">
      <%= link_to t('button.back'), root_path, :class=>"link" %><br />
    </div>
  </div>
  <div class="form-footer"></div>
</div>