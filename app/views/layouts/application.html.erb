<!DOCTYPE html>
<html>
<head>
  <title><%=t('application.title')%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name='loginza-verification' content='4ae29a920f04a7d7d6e56d6562a3f1d0' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span style="color: #333;"><%=t('application.menu')%></span>
          </a>
          <%= link_to t('application.title'), root_path, :class => "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <% if !current_user.nil? %>
                  <li class="dropdown" id="menuTransactionID">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      <%=t('menu.transaction.title')%>
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t('menu.transaction.from_cash.to_category'), transactions_path(:type => Transaction::TRANSACTION_FROM_CASH_TO_CATEGORY)%></li>
                      <li><%= link_to t('menu.transaction.from_account.to_cash'), transactions_path(:type => Transaction::TRANSACTION_FROM_ACCOUNT_TO_CASH)%></li>
                      <li><%= link_to t('menu.transaction.to_account'), transactions_path(:type => Transaction::TRANSACTION_TO_ACCOUNT)%></li>
                      <li><%= link_to t('menu.transaction.to_cash'), transactions_path(:type => Transaction::TRANSACTION_TO_CASH)%></li>
                      <li><%= link_to t('menu.transaction.from_cash.to_cash'), transactions_path(:type => Transaction::TRANSACTION_FROM_CASH_TO_CASH)%></li>
                      <li><%= link_to t('menu.transaction.from_account.to_category'), transactions_path(:type => Transaction::TRANSACTION_FROM_ACCOUNT_TO_CATEGORY)%></li>
                      <li><%= link_to t('menu.transaction.from_account.to_account'), transactions_path(:type => Transaction::TRANSACTION_FROM_ACCOUNT_TO_ACCOUNT)%></li>
                      <li><%= link_to t('menu.transaction.from_cash.to_account'), transactions_path(:type => Transaction::TRANSACTION_FROM_CASH_TO_ACCOUNT)%></li>
                    </ul>
                  </li>
                  <li class="dropdown" id="menuStatisticID">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      <%=t('menu.statistic.title')%>
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t('menu.statistic.date'), statistic_date_path %></li>
                      <li><%= link_to t('menu.statistic.category'), statistic_category_path %></li>
                    </ul>
                  </li>
                  <li id="menuAccountsID">
                    <%= link_to t('menu.accounts'), accounts_path(:type => Account::ACCOUNT_CARD_TYPE)%>
                  </li>
                  <li id="menuCashesID">
                    <%= link_to t('menu.cashes'), accounts_path(:type => Account::ACCOUNT_CASH_TYPE) %>
                  </li>
                  <li id="menuCategoriesID">
                    <%= link_to t('menu.categories'), categories_path %>
                  </li>
                  <ul class="nav pull-right visible-phone visible-tablet">
                    <li class="dropdown">
                      <a class="dropdown-toggle " data-toggle="dropdown" href="#">
                        <%=user_full_name%>
                        <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                        <li><%= link_to t('menu.user.profile'), edit_user_profile_path %></li>
                        <li><%= link_to t('menu.user.logout'), logout_path, :confirm => t('message.confirm.logout') %></li>
                      </ul>
                    </li>
                  </ul>
              <%else%>
                  <li id="menuAboutID">
                    <a href="#about"><%=t('menu.top.about')%></a>
                  </li>
                  <li id="menuContactsID">
                    <a href="#contact"><%=t('menu.top.contacts')%></a>
                  </li>
              <%end%>
            </ul>
            <% if !current_user.nil? %>
                <ul class="nav pull-right hidden-phone hidden-tablet">
                  <li class="dropdown" id="menuUserID">
                    <a class="dropdown-toggle " data-toggle="dropdown" href="#">
                      <%=user_full_name%>
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t('menu.user.profile'), edit_user_profile_path %></li>
                      <li><%= link_to t('menu.user.logout'), logout_path, :confirm => t('message.confirm.logout') %></li>
                    </ul>
                  </li>
                </ul>
            <%end%>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <%if !current_user.nil? %>
        <div class="row-fluid">
          <div class="span12">
            <%= yield %>
          </div>
        </div>
      <%else%>
        <%= yield %>
      <%end%>

      <hr>
      <footer>
        <p class="copyright">&copy; <%=t('application.copyright')%></p>
      </footer>
    </div>
</body>
</html>
