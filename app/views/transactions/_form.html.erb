    <div class="div-padding5">
      <%= f.label t(:cash_to)%><br/>
      <%= collection_select(:transaction, :account_to_id, @cashes, :id, :name, {}, {:class=>"account-select"})%>
    </div>
<%elsif @transaction_type == getTransactionFromAccountToCategory.to_s(10)%>
