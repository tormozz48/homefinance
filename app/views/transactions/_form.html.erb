<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, t(:error)) %> <%=t(:message_transaction_errors_header)%></h2>
      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :transaction_type%>
  <div><%= f.label t(:summa) %><br />
    <%= f.number_field :amount, :class => "input-field amount-input-field"%>
  </div>
  <div class="div-padding5"><%= f.label t(:date)%><br/>
    <%= date_select("transaction", "date", :order => [:day, :month, :year], :start_year => 2012, :use_month_numbers => true)%>
  </div>

<%if @transaction_type == getTransactionToAccount.to_s(10)%>
  <div class="div-padding5">
    <%= f.label t(:account_to)%><br/>
    <%= collection_select(:transaction, :account_to_id, @accounts, :id, :name, {}, {:class=>"account-select"})%>
  </div>
<%elsif @transaction_type == getTransactionFromAccountToAccount.to_s(10)%>
    <div class="div-padding5">
      <%= f.label t(:account_from)%><br/>
      <%= collection_select(:transaction, :account_from_id, @accounts, :id, :name, {}, {:class=>"account-select"})%>
    </div>
    <div class="div-padding5">
      <%= f.label t(:account_to)%><br/>
      <%= collection_select(:transaction, :account_to_id, @accounts, :id, :name, {}, {:class=>"account-select"})%>
    </div>
<%elsif @transaction_type == getTransactionFromAccountToCash.to_s(10)%>
