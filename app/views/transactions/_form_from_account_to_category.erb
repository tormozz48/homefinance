                            {:include_blank => t('common.undefined')}, {:id => "category_id", :class=>"account-select"})%>
  <%else%>
      <span class="form-label">
        <%= t('field.transaction.category')%>
      </span>
      <span class="account-name">
        <%= @transaction.category.name %>
      </span>
  <%end%>
</div>