<div class="margin-top10">
  <%if @task_new == true%>
      <%= label_tag :account_from_id, t('field.transaction.cash_from'), :class => "form-label"%><br/>
      <%= collection_select(:transaction, :account_from_id, @cashes, :id, :name_with_amount,
                            {:include_blank => t('common.undefined')}, {:id => "account_from_id", :class=>"account-select"})%>
  <%else%>
      <span class="form-label">
        <%= t('field.transaction.cash_from')%>
      </span>
      <span class="account-name">
        <%= @transaction.account_from.name %>
      </span>
  <%end%>
</div>
