<tr>
  <td>
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
        <%=t('button.action')%>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('button.edit'), edit_transaction_path(transaction, :page => @p)%></li>
        <li><%= link_to t('button.delete'), transaction, confirm: t('message.confirm.delete'), method: :delete%></li>
      </ul>
    </div>
  </td>

  <td><%=transaction.date%></td>
  <td><%=transaction.amount%></td>
  <%if transaction.transaction_type == Transaction::TRANSACTION_TO_ACCOUNT ||
          transaction.transaction_type == Transaction::TRANSACTION_TO_CASH%>
      <td>
        <%if !transaction.account_to.description.blank?%>
            <span class="no-disp"><%=transaction.account_to.description%></span>
        <%else%>
            <span class="no-disp"><%=t('common.undefined')%></span>
        <%end%>
        <%=transaction.account_to.name%> (<%=roundFloatTwoDigits(transaction.account_to.amount)%>)
      </td>
  <%elsif transaction.transaction_type == Transaction::TRANSACTION_FROM_ACCOUNT_TO_ACCOUNT ||
            transaction.transaction_type == Transaction::TRANSACTION_FROM_ACCOUNT_TO_CASH ||
            transaction.transaction_type == Transaction::TRANSACTION_FROM_CASH_TO_ACCOUNT ||
            transaction.transaction_type == Transaction::TRANSACTION_FROM_CASH_TO_CASH%>
      <td>
        <%if !transaction.account_from.description.blank?%>
            <span class="no-disp"><%=transaction.account_from.description%></span>
        <%else%>
            <span class="no-disp"><%=t('common.undefined')%></span>
        <%end%>
        <%=transaction.account_from.name%> (<%=roundFloatTwoDigits(transaction.account_from.amount)%>)
      </td>
      <td>
        <%if !transaction.account_to.description.blank?%>
            <span class="no-disp"><%=transaction.account_to.description%></span>
        <%else%>
            <span class="no-disp"><%=t('common.undefined')%></span>
        <%end%>
        <%=transaction.account_to.name%> (<%=roundFloatTwoDigits(transaction.account_to.amount)%>)
      </td>
    <%elsif transaction.transaction_type == Transaction::TRANSACTION_FROM_ACCOUNT_TO_CATEGORY ||
            transaction.transaction_type == Transaction::TRANSACTION_FROM_CASH_TO_CATEGORY%>
      <td>
        <%if !transaction.account_from.description.blank?%>
            <span class="no-disp"><%=transaction.account_from.description%></span>
        <%else%>
            <span class="no-disp"><%=t('common.undefined')%></span>
        <%end%>
        <%=transaction.account_from.name%> (<%=roundFloatTwoDigits(transaction.account_from.amount)%>)
      </td>
      <td>
          <div class="color-indicator-small" style="background-color: <%=getCategoryColor(transaction.category)%>;">&nbsp;</div>
          <%if !transaction.category.description.blank?%>
            <span class="no-disp"><%=transaction.category.description%></span>
          <%else%>
            <span class="no-disp"><%=t('common.undefined')%></span>
          <%end%>
          <%=transaction.category.name%>
      </td>
    <%end%>
</tr>
<tr>
    <%if !transaction.comment.nil? && !transaction.comment.blank?%>
        <td colspan="5">
            <%=transaction.comment %>
        </td>
    <%end%>
</tr>
