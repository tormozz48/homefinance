<!--sorting and filter form-->
<div class="row-fluid">
  <div class="span12">
    <%= render 'filter'%>
  </div>
</div>

<!--data table-->
<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
          <tr>
            <th width="10%">&nbsp;</th>
            <th width="8%"><%=t('field.common.date')%></th>
            <th width="5%"><%=t('field.transaction.summa')%></th>
            <%=createTransactionTableHeader(@transaction_type)%>
            <th width="37%" class="hidden-phone"><%=t('field.transaction.comment')%></th>
          </tr>
      </thead>
      <tbody id="dataWrapperID"></tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function(){
        transactionsJS.init(<%=@transaction_type%>);
    });
</script>